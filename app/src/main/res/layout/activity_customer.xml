<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    android:background="@color/white"
        android:layout_height="match_parent"
        >




        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:background="@drawable/fram_tool_bar"
                android:layout_weight="0.9">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4">
                    <ImageButton
                        android:layout_width="0dp"
                        android:id="@+id/backCus"
                        android:background="@drawable/blank"
                        android:src="@drawable/ic_baseline_arrow_back_24"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8">

                    </ImageButton>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:weightSum="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4">

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Customer"
                            android:textStyle="bold"
                            android:textColor="@color/btn_login"
                            android:textSize="35sp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4">

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="2.4"
                    android:orientation="vertical"
                    android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.9">
                    <EditText
                        android:hint="    Search by project or name"
                        android:id="@+id/search_project"
                        android:imeOptions="actionSearch"
                        android:drawableEnd="@drawable/ic_group_71"
                        android:layout_marginLeft="12dp"
                        android:paddingEnd="3dp"
                        android:inputType="textPersonName"
                        android:paddingStart="10dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/input_u_p"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </EditText>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7.9">
<ListView
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@color/white"
    android:id="@+id/listView"
    android:layout_marginTop="10dp"
    android:dividerHeight="5dp"
    android:divider="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


</ListView>

            </LinearLayout>

        </LinearLayout>





        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            app:fabSize="normal"
            android:id="@+id/addProject"
            android:src="@drawable/ic_baseline_add_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints">

        </com.getbase.floatingactionbutton.FloatingActionButton>


    </androidx.constraintlayout.widget.ConstraintLayout>

